<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Habits.Controls"
             x:Class="Habits.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <DatePicker x:Name="DatePicker" />
            <controls:HabitButton Habit="Gym" 
                                  Date="{Binding Source={x:Reference DatePicker}, Path=Date }" />
            <controls:HabitButton Habit="Work at home" 
                                  Date="{Binding Source={x:Reference DatePicker}, Path=Date }" />
            <controls:HabitButton Habit="Work at office" 
                                  Date="{Binding Source={x:Reference DatePicker}, Path=Date }" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
